{
    "compilerOptions": {
      "incremental": true,
      "target": "ESNext",
      "module": "CommonJS",
      "jsx": "react",
      "sourceMap": true,
      "noEmitOnError": true,
      "downlevelIteration": true,

      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,

      "moduleResolution": "NodeNext",
      "allowSyntheticDefaultImports": false,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,

      "composite": true,
      "rootDir": "src",
      "outDir": "dist",
      //"noEmit": true
    },
    // "references": [
    //     { "path": "../../libs/ui" }
    // ]
}
