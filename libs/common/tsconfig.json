{
    "compilerOptions": {
      "incremental": true,
      "target": "es6",
      "module": "NodeNext",
      "jsx": "react",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "noEmitOnError": true,
      "downlevelIteration": true,

      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,

      "moduleResolution": "NodeNext",
      "allowSyntheticDefaultImports": false,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,

      "rootDir": "src",
      "outDir": "dist",
    }
}
