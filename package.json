{
  "name": "practices-2022",
  "version": "1.0.0",
  "description": "Minimalist pnpm typescript webpack monorepo",
  "author": "Jason Kleban",
  "license": "ISC",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "pnpm build --filter \"@practices/client^...\"",
    "tsc": "pnpm tsc --filter practices-ui",
    "build": "pnpm build --filter \"@practices/client\"",
    "purge": "rimraf apps/*/node_modules libs/*/node_modules apps/*/dist apps/*/dist/*.tsbuildinfo libs/*/dist libs/*/dist/*.tsbuildinfo",
    "upgrade-all": "pnpm upgrade -r --interactive --latest"
  },
  "devDependencies": {
    "rimraf": "^3.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JasonKleban/practices-2022"
  }
}
